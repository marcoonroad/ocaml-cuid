opam-version: "2.0"
name:         "cuid-unix"
version:      "0.3"
maintainer:   "Martin Schut <m.schut@wommm.nl>"
authors:      [ "Marco Aur√©lio da Silva <marcoonroad@gmail.com>" "Martin Schut <m.schut@wommm.nl>" ]
bug-reports:  "https://gitlab.com/schutm/ocaml-cuid/issues"
license:      "MIT"
homepage:     "https://gitlab.com/schutm/ocaml-cuid"
dev-repo:     "git://gitlab.com/schutm/ocaml-cuid.git"
synopsis:     "Unix based CUID generator for OCaml"

build: [
    [ "dune" "subst" ] {pinned}
    [ "dune" "build" "-p" name "-j" jobs ]
]

run-test: [ "dune" "runtest" "-p" name "-j" jobs ]

depends: [
    "ocaml" {>= "4.08.0"}
    "cuid" {>= "0.3"}
    "mirage-crypto" {>= "0.6.1"}
    "mirage-crypto-rng" {>= "0.6.1"}
    "dune" {build & >= "2.9.3"}
    "re" {with-test & >= "1.10.3"}
    "alcotest" {with-test & >= "1.5.0"}
    "bisect_ppx" {with-test & >= "2.8.0"}
]
